# given that we have a minikube profile called "knoc" we have to get the configuration below in the remote home/.kube/ directory

apiVersion: v1
clusters:
- cluster:
    certificate-authority: ca.crt
    extensions:
    - extension:
        last-update: Wed, 15 Jun 2022 15:37:26 EEST
        provider: minikube.sigs.k8s.io
        version: v1.25.2
      name: cluster_info
    server: https://139.91.92.71:38080
  name: knoc
contexts:
- context:
    cluster: knoc
    extensions:
    - extension:
        last-update: Wed, 15 Jun 2022 15:37:26 EEST
        provider: minikube.sigs.k8s.io
        version: v1.25.2
      name: context_info
    namespace: default
    user: knoc
  name: knoc
current-context: knoc
kind: Config
preferences: {}
users:
- name: knoc
  user:
    client-certificate: client.crt
    client-key: client.key


#include the files below in the remote .kube directory
